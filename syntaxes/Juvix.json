{
  "name": "Juvix",
  "scopeName": "source.Juvix",
  "fileTypes": [
    "Juvix"
  ],
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#string"
    },
    {
      "include": "#number"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "match": "--.*$",
          "name": "comments.line.double-dash.Juvix"
        },
        {
          "begin": "\\{--",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.Juvix"
            }
          },
          "end": "--\\}",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.Juvix"
            }
          },
          "name": "comments.documentation.block.Juvix"
        },
        {
          "begin": "\\{-?",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.Juvix"
            }
          },
          "end": "-\\}",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.Juvix"
            }
          },
          "name": "comments.block.Juvix"
        }
      ]
    },
    "string" :
    {
      "patterns" : [
        {
          "match" : "\".*\"",
          "name" : "string"
        }
      ]
    },
    "number" : {
      "patterns" : [
        {
          "match" : "[0-9]+",
          "name" : "number"
        }
      ]
    }
  }

}
