{
  "name": "Juvix",
  "scopeName": "source.Juvix",
  "fileTypes": [
    "Juvix"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#string"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#module"
    }
  ],
  "repository": {
    "comments": [
      {
        "name": "comments.line.juvix",
        "match": "(--).*$\n?",
        "comment": "Line comment"
      },
      {
        "name": "comments.documentation.line.juvix",
        "match": "(---).*$\n?",
        "comment": "Line comment"
      },
      {
        "name": "comments.documentation.block.juvix",
        "begin": "\\{--",
        "end": "--\\}",
        "comment": "Block documentation comment"
      },
      {
        "name": "comments.block.juvix",
        "begin": "\\{-",
        "end": "-\\}",
        "comment": "Block comment"
      }
    ],
    "keywords": {
      "name": "keyword",
      "match": "\\b(Type|let|in|type|import|open|axiom|using|hiding|public|terminating|builtin|positive|syntax)\\b"
    },
    "string": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.juvix",
      "patterns": [
        {
          "match": "\\\\(.)",
          "name": "constant.character.escape.juvix"
        }
      ]
    },
    "numbers": {
      "name": "number",
      "match": "\\b([0-9]+)\\b"
    },
    "module": {
      "begin": "\\b(module)\\b",
      "beginCaptures": {
        "1": {
          "name": "keyword"
        }
      },
      "end": "(;)",
      "name": "axiom",
      "patterns": [
        {
          "match": "([^(\\s|;|\\{|\\}|\\(|\\)|@)]+)",
          "name": "module"
        }
      ]
    }
  }
}